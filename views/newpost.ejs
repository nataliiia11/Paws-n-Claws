<% newPost.forEach((post) => {%>
<div class="card gedf-card" style="margin-bottom: 10px;">
    <form action="/<%=page%>/delete" method="post">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex justify-content-between align-items-center">
                <div class="mr-2">
                    <img class="rounded-circle" width="45" src="https://picsum.photos/50/50" alt="">
                </div>
                <div class="ml-2">
                    <div class="h5 m-0"><%=userName%></div>
                </div>
            </div>
            <div>
                <div class="dropdown">
                    <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-ellipsis-h"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                        <div class="h6 dropdown-header">Configuration</div>
                        
                        <button class="dropdown-item" value="<%=post._id%>" name="selected" type="submit">Delete</button>
                    
                    </div>
                </div>
            </div>
        </div>

    </div>
    <a class="card-link" href="#">
        <!-- <h5 class="card-title">User</h5> -->
    </a>
    <div class="card-body justify-content-between">
        
        <p><%=post.content%></p>
       
    
    </div>
    <div class="card-footer">
        <a href="#" class="card-link"><i class="fa fa-gittip"></i> </a>
        <a href="#" class="card-link"><i class="fa fa-comment"></i> </a>
        <a href="#" class="card-link"><i class="fa fa-mail-forward"></i></a>
    </div>
  </div>
</form>
  <%})%>